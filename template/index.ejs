<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>整備手順</title>
</head>
<body>
  <div class="container text-center">
    <div class="row">
      <div class="col-sm-12">
        <form action="./init" id="initForm" method="get">
          <button type="button" class="my-1 btn btn-secondary" data-bs-toggle="modal" data-bs-target="#initModal">サーバ初期設定</button>
        </form>
      </div>
    </div>

    <div class="row ">
      <div class="col-sm-12">
        <form action="./list" method="get">
          <button type="submit" class="my-1 btn btn-secondary">実施手順一覧</button>
        </form>
      </div>
    </div>

    <div class="modal fade" id="initModal" tabindex="-1" aria-labelledby="modelLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <input id="pswd" value=""/>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
            <button type="button" class="btn btn-primary" onclick="submitCheck()">開始</button>
          </div>
        </div>
      </div>
    </div>

  </div>
<script>
  function submitCheck(){
    const pswd = document.getElementById('pswd').value;
    fetch('/login',{
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ pswd: pswd })
    })
    .then((res) => res.json())
    .then((data) => {
      if(data === true){
        document.getElementById('initForm').submit();
      }
    })
  }
</script>
</body>
</html>